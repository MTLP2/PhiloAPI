{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "allowUnreachableCode": true,
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/i18n",
      "@adonisjs/view",
      "@japa/preset-adonis/build/adonis-typings"
    ]
  }
}
